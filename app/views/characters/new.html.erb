<h1>Character Details</h1>


<div align="center" class="errors">
  <%= render 'shared/errors', locals: {errors: @errors} if @errors %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@character) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :level %>
      <%= f.text_field :level %>

      <%= f.label "Primary Attribute" %>
     || <%= link_to "Create New Attributes", "#" %>
      <%= f.select :primary_attr, list_attributes %>

      <%= f.label :avatar_url %>
      <%= f.text_field :avatar_url %>

      <%= f.label "Fighter Class" %>
      <%= f.select :fighter_class_id, list_fighter_classes %>

      <%= f.submit "Create", class: "button btn btn-primary" %>
    <% end %>
  </div>
</div>