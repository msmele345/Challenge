<h1>Enter a new character here</h1>


<div align="center" class="errors">
  <%= render 'shared/errors', locals: {errors: @errors} if @errors %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@character) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :level %>
      <%= f.text_field :level %>

      <%= f.label :primary_attribute %>
      <%= f.text_field :primary_attribute %>

      <%= f.label :avatar_url %>
      <%= f.text_field :avatar_url %>

      <%= f.submit "Create", class: "button btn btn-primary" %>
    <% end %>
  </div>
</div>