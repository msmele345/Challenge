<!DOCTYPE html>
<html>
  <head>
    <title>CopyCat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
     <div class="container">

      <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      
         <%= yield %>
        <%= render 'layouts/footer'  %>
    </div>
  </body>
</html>
