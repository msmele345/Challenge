<h1>New Attribute </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with url: "/attributes", local: true, method: "POST" do |f| %>

      <%= f.label "Attribute Name" %>
      <%= f.text_field :attr_name %>

      <%= f.label "Level" %>
      <%= f.text_field :attr_level %>

    <% if grab_character_names %>
      <%= f.label "Assign to Character:" %>
      <%= f.select :character_id, grab_character_names %>
    <% end %>

      <%= f.submit "Create Attribute", class: "button btn btn-primary" %>
    <% end %>
  </div>
</div>